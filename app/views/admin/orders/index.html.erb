<div class="col-md-10">
  <h3><%= t(:order_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_order), new_admin_order_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <th><%= Order.human_attribute_name(:user_id) %></th>
        <th><%= Order.human_attribute_name(:event_id) %></th>
        <th><%= Order.human_attribute_name(:amount) %></th>
        <th><%= Order.human_attribute_name(:state) %></th>
        <th><%= Order.human_attribute_name(:date) %></th>
        <th><%= Order.human_attribute_name(:created_at) %></th>
        <th><%= Order.human_attribute_name(:updated_at) %></th>
        <th colspan="3"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @orders %>
    </tbody>
  </table>
</div>