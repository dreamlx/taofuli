<div class="col-md-6">
  <%= simple_form_for([:admin, @order]) do |f| %>
    <%= f.input :user_id, collection: User.all %>
    <%= f.input :event_id, collection: Event.all %>
    <%= f.input :amount %>
    <%= f.input :state %>
    <%= f.input :date, html5: true %>
    <%= f.button :submit %>
  <% end %>
</div>
<div class="col-md-12">
  <%= link_to t(:back), :back %>
</div>