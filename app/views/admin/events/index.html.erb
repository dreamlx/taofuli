<div class="col-md-10">
  <h3><%= t(:event_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_event), new_admin_event_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <th><%= Event.human_attribute_name(:image) %></th>
        <% Event::HEADERS.each do |column| %>
          <th><%= Event.human_attribute_name(column) %></th>
        <% end %>
        <th><%= Event.human_attribute_name(:url) %></th>
        <th><%= Event.human_attribute_name(:created_at) %></th>
        <th><%= Event.human_attribute_name(:updated_at) %></th>
        <th colspan="3"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @events %>
    </tbody>
  </table>
</div>